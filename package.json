{
  "name": "@omurilo/remark-mermaid",
  "version": "1.1.5",
  "type": "module",
  "description": "Remark plugin for replacing ```mermaid code blocks with react `<Mermaid />` component with props like className and theme with themeVariables property",
  "repository": {
    "url": "https://github.com/omurilo/remark-mermaid"
  },
  "author": "Murilo Alves <hi@omurilo.dev> (https://github.com/omurilo)",
  "license": "MIT",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./Mermaid": {
      "import": "./dist/Mermaid.js",
      "require": "./dist/Mermaid.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "mermaid": [
        "./dist/Mermaid.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "types:check": "tsc --noEmit -p tsconfig.json",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^19"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "mermaid": "^11.3.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@types/mdast": "^4.0.4",
    "@types/react": "^19",
    "react": "^19",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "unified": "^11.0.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}
